<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainMenuBackground"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="966dp"
        android:layout_height="585dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/SM_Kitchen_ImageView"
            android:layout_width="@dimen/tile_size"
            android:layout_height="@dimen/tile_size"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorMainMenuTiles"
            android:contentDescription="@string/tileDescription"
            android:onClick="ShowPopup"
            android:padding="@dimen/tile_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/stove" />

        <ImageView
            android:id="@+id/SM_Dining_ImageView"
            android:layout_width="@dimen/tile_size"
            android:layout_height="@dimen/tile_size"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="24dp"
            android:background="@color/colorMainMenuTiles"
            android:contentDescription="@string/tileDescription"
            android:onClick="onKitchenImageViewClick"
            android:padding="@dimen/tile_padding"
            app:layout_constraintStart_toEndOf="@+id/SM_Kitchen_ImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dinnertable" />

        <ImageView
            android:id="@+id/SM_Sleeping_ImageView"
            android:layout_width="@dimen/tile_size"
            android:layout_height="@dimen/tile_size"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/colorMainMenuTiles"
            android:contentDescription="@string/tileDescription"
            android:onClick="onKitchenImageViewClick"
            android:padding="@dimen/tile_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SM_Dining_ImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a7767556" />

        <ImageView
            android:id="@+id/SM_Bathroom_ImageView"
            android:layout_width="@dimen/tile_size"
            android:layout_height="@dimen/tile_size"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="24dp"
            android:background="@color/colorMainMenuTiles"
            android:contentDescription="@string/tileDescription"
            android:onClick="onKitchenImageViewClick"
            android:padding="@dimen/tile_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SM_Kitchen_ImageView"
            app:srcCompat="@drawable/bathtub" />

        <ImageView
            android:id="@+id/MM_Living_ImageView"
            android:layout_width="@dimen/tile_size"
            android:layout_height="@dimen/tile_size"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:background="@color/colorMainMenuTiles"
            android:contentDescription="@string/tileDescription"
            android:onClick="onKitchenImageViewClick"
            android:padding="@dimen/tile_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/SM_Bathroom_ImageView"
            app:layout_constraintTop_toBottomOf="@+id/SM_Dining_ImageView"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/couch" />

        <ImageView
            android:id="@+id/MM_Basement_ImageView"
            android:layout_width="@dimen/tile_size"
            android:layout_height="@dimen/tile_size"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@color/colorMainMenuTiles"
            android:contentDescription="@string/tileDescription"
            android:onClick="onKitchenImageViewClick"
            android:padding="@dimen/tile_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/MM_Living_ImageView"
            app:layout_constraintTop_toBottomOf="@+id/SM_Sleeping_ImageView"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/man_descending_stairs" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="190dp"
        android:layout_height="800dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347">

        <ImageView
            android:id="@+id/supervisor_ImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/supervisorDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/supervisor" />

        <ImageView
            android:id="@+id/phone_ImageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/call_answer" />

        <ImageView
            android:id="@+id/assistant_ImageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/assistant" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>

