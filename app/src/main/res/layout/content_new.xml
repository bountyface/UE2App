<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NewActivity"
    tools:showIn="@layout/activity_new">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="282dp"
        android:layout_height="272dp"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bathtub"
        tools:layout_editor_absoluteX="6dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="294dp"
        android:layout_height="280dp"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/closet"
        tools:layout_editor_absoluteX="354dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="273dp"
        android:layout_height="269dp"
        android:layout_marginStart="728dp"
        android:layout_marginLeft="728dp"
        android:layout_marginBottom="284dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mop2" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="170dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/leftarrow"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="-1dp" />
</android.support.constraint.ConstraintLayout>